<UserControl x:Class="Demo.WindowsPresentation.Controls.StopTooltip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent"  Width="326" IsHitTestVisible="True" Opacity="0.7">
    <Grid>
        <Rectangle Stroke="Green" RadiusX="22" RadiusY="22" Fill="AliceBlue"></Rectangle>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Name="labelMarshrutType" FontSize="18" FontWeight ="Bold" TextWrapping="WrapWithOverflow"  Foreground="Red" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1"></TextBlock >
            <TextBlock Margin="2" Name="LineNum" VerticalAlignment="Top" Foreground="Navy" FontSize="16" FontWeight="Bold" Grid.Row="1" Grid.Column="1"></TextBlock>
            <StackPanel Name="panelRoutesRefs" Grid.Row="2" Grid.ColumnSpan ="2">
                </StackPanel>
        </Grid>
    </Grid>
</UserControl>
